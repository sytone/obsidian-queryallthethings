{
  "typedocOptions": {
    "entryPoints": [
      "src/main.ts"
    ],
    "out": "docs/typedoc",
    "plugin": "typedoc-plugin-markdown",
    "entryDocument": "index.md",
    "githubPages": false,
    "readme": "none"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "outDir": "./dist", // target for compiled files
    "baseUrl": "./src",
    "rootDir": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ES2022",
    "target": "ES2022",
    "allowJs": true,
    "noImplicitAny": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "src/*": [
        "src/*"
      ],
      "tests/*": [
        "__tests__/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "lib": [
      "DOM",
      "ES2022"
    ],
    "types": [
      "jest",
      "node",
      "@types/jest"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*"
  ]
}