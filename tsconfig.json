{
  "compilerOptions": {
    "outDir": "./dist", // target for compiled files
    "baseUrl": "./src",
    "rootDir": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "paths": {
      "src/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts"
  ]
}
