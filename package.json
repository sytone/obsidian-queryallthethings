{
  "name": "obsidian-queryallthethings",
  "version": "0.3.0",
  "description": "A plugin that allows you to make queries against the internal data of obsidian and render it how you want.",
  "main": "main.js",
  "scripts": {
    "dev": "node .config/esbuild.config.mjs",
    "build": "node .config/esbuild.config.mjs production",
    "build:dev": "node .config/esbuild.config.mjs",
    "lint": "eslint ./src/**/*.ts --fix",
    "lint:markdown": "markdownlint-cli2-config \".config/.markdownlint-cli2.jsonc\" \"**/*.md\" \"#node_modules\" \"#CHANGELOG.md\" \"#docs/CHANGELOG.md\"",
    "test": "xo && jest --ci",
    "test:dev": "jest --watch",
    "release": "standard-version",
    "release:dry": "standard-version --dry-run",
    "release:minor": "standard-version --release-as minor --no-verify",
    "release:patch": "standard-version --release-as patch --no-verify",
    "release:major": "standard-version --release-as major --no-verify"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "obsidian-query"
  ],
  "author": "Jon Bullen",
  "license": "MIT",
  "devDependencies": {
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "13.0.6",
    "@rollup/plugin-typescript": "8.3.0",
    "@types/luxon": "^3.3.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "builtin-modules": "3.3.0",
    "concurrently": "^7.2.2",
    "esbuild": "0.17.3",
    "esbuild-plugin-copy-file": "^0.0.2",
    "eslint": "^8.40.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^27.5.1",
    "obsidian": "1.2.8",
    "prettier": "2.4.1",
    "rollup": "^2.60.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^27.0.7",
    "tslib": "2.4.0",
    "typescript": "4.7.4",
    "xo": "^0.54.2"
  },
  "dependencies": {
    "@jest/globals": "^29.5.0",
    "alasql": "^3.1.0",
    "eventemitter2": "^6.4.5",
    "handlebars": "^4.7.7",
    "luxon": "^3.3.0",
    "obsidian-dataview": "0.5.55",
    "ts-md5": "^1.3.1",
    "yaml": "^2.2.2"
  },
  "xo": {
    "space": true,
    "rules": {
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "interface",
          "format": [
            "PascalCase"
          ],
          "custom": {
            "regex": "^I[A-Z]",
            "match": true
          }
        }
      ],
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "interface"
      ],
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "pascalCase": true
          }
        }
      ]
    }
  },
  "standard-version": {
    "tag-prefix": "",
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "change",
        "section": "Bug Fixes and Changes"
      },
      {
        "type": "fix",
        "section": "Bug Fixes and Changes"
      },
      {
        "type": "deprecate",
        "section": "Bug Fixes and Changes"
      },
      {
        "type": "build",
        "hidden": true
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "ci",
        "hidden": true
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "section": "Internal"
      },
      {
        "type": "revert",
        "hidden": true
      },
      {
        "type": "security",
        "section": "Internal"
      },
      {
        "type": "perf",
        "section": "Internal"
      },
      {
        "type": "test",
        "section": "Internal"
      }
    ],
    "commitUrlFormat": "https://github.com/sytone/obsidian-queryallthethings/commits/{{hash}}",
    "compareUrlFormat": "https://github.com/sytone/obsidian-queryallthethings/compare/{{previousTag}}...{{currentTag}}",
    "issueUrlFormat": "https://github.com/sytone/obsidian-queryallthethings/issues/{{id}}",
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "manifest.json",
        "type": "json"
      },
      {
        "filename": "versions.json",
        "updater": ".config/obsidian-versions-updater.js"
      }
    ]
  },
  "jest": {
    "globalSetup": "./.config/global-setup.js",
    "testEnvironment": "jsdom",
    "verbose": true,
    "preset": "ts-jest",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
